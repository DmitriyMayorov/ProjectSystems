<Window x:Class="ProjectSystems.View.AdministrationProjectAndInfSections.PageAddMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectSystems.View.AdministrationProjectAndInfSections"
        mc:Ignorable="d"
        Title="PageAddMenu" 
        Height="600"
        Width="400"
        Background="#272B2F">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBox Margin="15" Text="{Binding SelectedName}"
                     Foreground="White"/>
        </Grid>

        <Grid Grid.Row="1">
            <TextBox Margin="15"
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     Text="{Binding SelectedDescription}"
                     Foreground="White"/>
        </Grid>

        <Grid Grid.Row="2">
            <Button Width="150"
                    HorizontalAlignment="Right"
                    Margin="0, 0, 20, 0"
                    Command="{Binding AddCommand}">
                Добавить
            </Button>
        </Grid>
    </Grid>
</Window>
